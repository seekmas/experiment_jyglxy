
<div class="row-fluid">

    <div class="span12">
        <div class="box">
            <div class="box-header">
                <span class="title">所有的课程视频</span>
                <ul class="box-toolbar">
                    <li><span class="label label-blue">{{ plays | length }}</span></li>
                </ul>
            </div>
            <div class="box-content scrollable">

                {% for play in plays %}
                    <div class="box-section news with-icons">

                        {% if play.isEnabled %}
                            <div class="avatar green"><i class="icon-ok icon-2x"></i></div>
                        {% else %}
                            <div class="avatar blue"><i class="icon-remove icon-2x"></i></div>
                        {% endif %}

                        <div class="news-content">
                            <div class="news-title"><a href="{{ url('admin_course_play_edit' , {'id' : play.id } ) }}">{{ play.title }}</a></div>
                            <div class="news-text">
                                {{ play.course }}
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </div>
</div>