
<div class="row-fluid">

    <div class="span12">
        <div class="box">
            <div class="box-header">
                <span class="title">所有的课程</span>
                <ul class="box-toolbar">
                    <li><span class="label label-blue">{{ courses | length }}</span></li>
                </ul>
            </div>
            <div class="box-content scrollable">

                {% for course in courses %}
                    <div class="box-section news with-icons">

                        {% if course.enabled %}
                            <div class="avatar green"><i class="icon-ok icon-2x"></i></div>
                        {% else %}
                            <div class="avatar blue"><i class="icon-remove icon-2x"></i></div>
                        {% endif %}

                        <div class="news-content">
                            <div class="news-title"><a href="{{ url('admin_course_edit' , {'id' : course.id} ) }}">{{ course.title }}</a></div>
                            <div class="news-text">
                                {{ course.content[:200] }}
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </div>
</div>