{% extends "FrontendContentBundle::layouts.html.twig" %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('community/css/mega.css') }}">

    <link href="{{ asset('community/font-awesome/css/font-awesome.min.css') }}">
    <link href="{{ asset('redactor-js/redactor/redactor.css') }}" media="screen" rel="stylesheet" type="text/css" />
    <link href="{{ asset('community/css/image.css') }}" media="screen" rel="stylesheet" type="text/css" />

<style>
    img.cover {
        width: 100%;
        height: 200px;
    }
</style>
<script src="{{ asset('theme/js/modernizr-2.6.2-respond-1.1.0.min.js') }}"></script>
{% endblock %}

{% block body %}
<!--[if lt IE 7]>
<p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
<![endif]-->

{{ render_esi( controller( 'CommunityElementBundle:Mega:index' ) ) }}

<div class="container"><div class="row"><div class="col-md-12">
{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="alert alert-{{ type }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
</div></div></div>

    {% block content %}{% endblock %}


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="http://tajs.qq.com/stats?sId=36358949" charset="UTF-8"></script>

    <script src="{{ asset('redactor-js/redactor/redactor.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('textarea').redactor({
                minHeight: 100
            });
        });
    </script>
    <script src="{{ asset('community/Readmore.js/readmore.min.js') }}"></script>
    <script>
    $('.readmore').readmore({
        speed: 75,
        maxHeight: 150 ,
        moreLink: '<a href="#">阅读全文</a>',
        lessLink: '<a href="#">关闭全文</a>'
    });
    </script>
    <script type="text/javascript" src="{{ asset('community/jquery-ias.min.js/jquery-ias.min.js') }}"></script>
{% endblock %}
